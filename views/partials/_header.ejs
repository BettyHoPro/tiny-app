<header>

  <!-- menu bar  -->
  <nav class="navbar navbar-expand-md navbar-dark bg-success" style= "height:60px">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>

    </div>  
    <!-- log in  -->
    <ul style=" vertical-align:right " style= "height:60px"></ul>
    <% if(user){ %>
      <span style='color:#222222; '> Logged in as <%= user.email %> ! &nbsp;</span>
     <a href = "/logout" >    
      <button type="button" class="btn btn-primary" style="color:#222222;background-color:transparent; border:2px #222222 solid ;border-radius:5px">Logout</button>
      </a>
    <% } else { %>
      <form class="form-inline" action="/login" method="POST">
        <div class="form-group mb-2">
          <input class="form-control" type="text" name="email" placeholder="Please fill the email"  style="width: 200px;"> 
          <span>&nbsp; &nbsp;</span>
          <input class="form-control" type="text" name="password" placeholder="Please fill the password" style="width: 200px;"> 
          <span>&nbsp; &nbsp;</span>
          <button type="submit" class="btn btn-primary" style="color:#222222;background-color:transparent; border:2px #222222 solid ;border-radius:5px">Login</button>
        </div>
      </form>
   <% } %>    
  </ul> 
  </nav>
</header>